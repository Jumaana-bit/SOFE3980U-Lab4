pipeline {
    agent any
    
    tools {
        maven 'maven' // Specify the Maven installation name configured in Global Tool Configuration
    }
    
    environment {
        PROJECT_ID = 'useful-variety-415821'
        CLUSTER_NAME = 'quality'
        LOCATION = 'northamerica-northeast2'
        CREDENTIALS_ID = 'gcp'
    }
    
    stages {
        stage('Init') {
            steps {
                checkout scm
                sh 'echo "Start of Job"'
            }
        }
        
        stage('build') {
            steps {
                sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
            }
        }
        
        stage('Deploy to GKE') {
            steps {
                step([
                    $class: 'KubernetesEngineBuilder',
                    projectId: env.PROJECT_ID,
                    clusterName: env.CLUSTER_NAME,
                    location: env.LOCATION,
                    manifestPattern: 'values.yaml', // Update this if your manifest file has a different name
                    credentialsId: env.CREDENTIALS_ID,
                    verifyDeployments: true
                ])
            }
        }
    }
}
