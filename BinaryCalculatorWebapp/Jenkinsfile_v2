pipeline {
    agent any
    
    tools {
        maven 'maven' // Specify the Maven installation name configured in Global Tool Configuration
    }
    
    environment {
        GCP_PROJECT = 'useful-variety-415821'
        GKE_CLUSTER = 'quality'
        GKE_ZONE = 'northamerica-northeast2'
        DOCKER_IMAGE = 'northamerica-northeast2-docker.pkg.dev/useful-variety-415821/quality/binarycalculator'
        K8S_NAMESPACE = 'default'
        DEPLOYMENT_NAME ='binarycalculator-deployment'
        CONTAINER_NAME ='binarycalculator'
    }
    
    stages {
        stage('Init') {
            steps {
                checkout scm
                sh 'echo "Start of Job"'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
            }
        }
        
        stage('Deploy to GKE') {
            steps {
               script {
    bat "C:/Users/jumia/Downloads/google-cloud-sdk/bin/gcloud auth activate-service-account --key-file=C:/Users/jumia/Downloads/useful-variety-415821-c0957804e409.json"
    bat "C:/Users/jumia/Downloads/google-cloud-sdk/bin/gcloud container clusters get-credentials ${GKE_CLUSTER} --zone ${GKE_ZONE} --project ${GCP_PROJECT}"
    bat "C:/Users/jumia/Downloads/google-cloud-sdk/bin/kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=${DOCKER_IMAGE}"
}
            }
        }
    }
}
