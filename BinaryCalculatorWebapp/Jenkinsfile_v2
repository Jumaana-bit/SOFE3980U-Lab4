environment {
    GCP_PROJECT = 'useful-variety-415821'
    GKE_CLUSTER = 'quality'
    GKE_ZONE = 'northamerica-northeast2'
    DOCKER_IMAGE = 'northamerica-northeast2-docker.pkg.dev/useful-variety-415821/quality/binarycalculator'
    K8S_NAMESPACE = 'default'
}
    
    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'Token-Github', url: 'https://github.com/Jumaana-bit/SOFE3980U-Lab4'
            }
        }
        
        stage('Build') {
            steps {
                sh 'your-build-command'
            }
        }
        
        stage('Deploy to GKE') {
            steps {
                script {
                    gkeCluster(
                        projectId: "${GCP_PROJECT}",
                        credentialsId: 'your-gcp-service-account-credentials-id',
                        clusterName: "${GKE_CLUSTER}",
                        location: "${GKE_ZONE}") {
                        sh "kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=${DOCKER_IMAGE}:${BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}
