pipeline {
  environment {
    PROJECT = "useful-variety-415821"
    APP_NAME = "binary-calculator2"
    CLUSTER = "sofe3980u"
    CLUSTER_ZONE = "northamerica-northeast1-b"
    IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}"
    JENKINS_CRED = "green-tract-379622"
  }
  
  agent {
    kubernetes {
      label 'my-custom-label' // Change the label to match the nodes you want to use
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    component: ci
spec:
  # Use service account that can deploy to all namespaces
  serviceAccountName: cd-jenkins
  containers:
  - name: gcloud
    image: gcr.io/cloud-builders/gcloud
    command:
    - cat
    tty: true
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    command:
    - cat
    tty: true
"""
    }
  }
  
  tools {
    maven 'maven' 
  }
  
  stages {
    stage ('Init') {
      steps {
        checkout scm
        sh 'echo "Start of Job"'
      }
    }
    
    stage ('build') {
      steps {
        sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
    
    stage('Build and push image with Container Builder') {
      steps {
        container('gcloud') {
          sh "/builder/google-cloud-sdk/bin/gcloud builds submit -t ${IMAGE_TAG} ./BinaryCalculatorWebapp/"
        }
      }
    }
    
    stage('Deploy to GKE') {
      steps {
        container('kubectl') {
          sh """
            /builder/google-cloud-sdk/bin/gcloud container clusters get-credentials ${CLUSTER} --zone ${CLUSTER_ZONE} --project ${PROJECT}
            /builder/google-cloud-sdk/bin/kubectl set image deployment/${APP_NAME} ${APP_NAME}=${IMAGE_TAG} --record
          """
        }
      }
    }
  }
}
