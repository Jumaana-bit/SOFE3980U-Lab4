pipeline {
    agent any
    
    tools {
        maven 'maven' // Specify the Maven installation name configured in Global Tool Configuration
    }
    
    environment {
        GCP_PROJECT = 'useful-variety-415821'
        GKE_CLUSTER = 'quality'
        GKE_ZONE = 'northamerica-northeast2'
        DOCKER_IMAGE = 'northamerica-northeast2-docker.pkg.dev/useful-variety-415821/quality/binarycalculator'
        K8S_NAMESPACE = 'default'
        DEPLOYMENT_NAME = 'binarycalculator-deployment'
        CONTAINER_NAME = 'binarycalculator'
    }
    
    stages {
        stage('Init') {
            steps {
                checkout scm
                sh 'echo "Start of Job"'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
            }
        }
        
        stage('Deploy to GKE') {
            steps {
                script {
                    // Authenticate with Google Cloud
                    withCredentials([gcpProject(id: "${GCP_PROJECT}", serviceAccountKeyVariable: 'GOOGLE_APPLICATION_CREDENTIALS')]) {
                        // Set the environment variable for GOOGLE_APPLICATION_CREDENTIALS
                        sh 'export GOOGLE_APPLICATION_CREDENTIALS=/var/run/secret/cloud.google.com/projects/${GCP_PROJECT}/serviceaccount.json'
                        
                        // Set up gcloud
                        sh 'gcloud auth activate-service-account --key-file=$GOOGLE_APPLICATION_CREDENTIALS'
                        sh 'gcloud container clusters get-credentials ${GKE_CLUSTER} --zone ${GKE_ZONE} --project ${GCP_PROJECT}'
                        
                        // Update deployment image
                        sh "kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=${DOCKER_IMAGE}"
                    }
                }
            }
        }
    }
}
