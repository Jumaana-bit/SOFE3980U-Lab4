pipeline {
    agent any
    
    environment {
        GCP_PROJECT = 'useful-variety-415821'
        GKE_CLUSTER = 'quality'
        GKE_ZONE = 'northamerica-northeast2'
        DOCKER_IMAGE = 'northamerica-northeast2-docker.pkg.dev/useful-variety-415821/quality/binarycalculator'
        K8S_NAMESPACE = 'default'
        DEPLOYMENT_NAME ='binarycalculator-deployment'
        CONTAINER_NAME ='binarycalculator'
    }
    
    stages {
    stage ('Init') {
      steps {
	    checkout scm
        sh 'echo "Start of Job"'
      }
    }
        
       stage ('build') {
      steps {
        sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
        
        stage('Deploy to GKE') {
            steps {
                script {
                    gkeCluster(
                        projectId: "${GCP_PROJECT}",
                        credentialsId: 'gcp',
                        clusterName: "${GKE_CLUSTER}",
                        location: "${GKE_ZONE}") {
                        sh "kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=${DOCKER_IMAGE}"
                    }
                }
            }
        }
    }
}
